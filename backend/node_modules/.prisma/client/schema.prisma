// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TECHNICIAN
  CLIENT
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String
  role          Role
  avatarUrl     String?
  isFirstAccess Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relacionamentos específicos por role
  technician Technician?
  client     Client?

  @@map("users")
}

model Technician {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Horários de disponibilidade (array de strings como '08:00', '09:00', etc)
  availableHours String[] @default(["08:00", "09:00", "10:00", "11:00", "14:00", "15:00", "16:00", "17:00"])

  // Chamados atribuídos ao técnico
  tickets Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("technicians")
}

model Client {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Chamados criados pelo cliente
  tickets Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("clients")
}

model Service {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @db.Decimal(10, 2)
  isActive    Boolean @default(true)

  // Relação com chamados (many-to-many)
  ticketServices TicketService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("services")
}

model Ticket {
  id String @id @default(uuid())

  // Cliente que criou o chamado
  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  // Técnico responsável
  technicianId String
  technician   Technician @relation(fields: [technicianId], references: [id])

  // Status do chamado
  status TicketStatus @default(OPEN)

  // Descrição do problema
  description String?

  // Serviços do chamado
  ticketServices TicketService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tickets")
}

model TicketService {
  id String @id @default(uuid())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  // Valor do serviço no momento da adição (snapshot)
  price Decimal @db.Decimal(10, 2)

  // Indica se foi adicionado pelo técnico (true) ou pelo cliente na criação (false)
  addedByTechnician Boolean @default(false)

  createdAt DateTime @default(now())

  @@unique([ticketId, serviceId])
  @@map("ticket_services")
}
